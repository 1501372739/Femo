    </view>

    <view class='sample'>
      <view class='imgDes padd'>
        <text>示例图正面</text>
        <text class='sampleOther'>示例图反面</text>
      </view>
      <view class='imgContent padd'>
        <image src='../../images/haibao.png'></image>
        <image src='../../images/haibao.png'></image>
      </view>
    </view>

    <view class='btn'>
      <button class='bg-c' type="primary" hover-class="other-button-hover">立即认证</button>
    </view> 
  </view>

</view>