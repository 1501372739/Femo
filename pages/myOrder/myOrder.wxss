/* pages/myOrder/myOrder.wxss */

.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
  position: relative;
}

/* 头像 */

.card-content image {
  width: 100%;
  height: 325rpx;
  border-radius: 20rpx;
}

.avater {
  width: 125rpx;
  height: 125rpx;
  position: absolute;
  top: 25%;
  right: 17%;
  z-index: 99;
  border-radius: 50%;
  border: solid #89888c 2px;
}

.avater image {
  width: 100%;
  height: 100%;
}

.userInfo {
  position: absolute;
  top: 25%;
  left: 17%;
  z-index: 99;
  font-size: 28rpx;
  color: white;
}

.userInfo text {
  display: block;
  float: left;
  margin-top: 20rpx;
}

.userInfo image {
  width: 45rpx;
  height: 45rpx;
  display: inline-block;
  margin: 20rpx 0 0 20rpx;
  float: right;
}

/* 附近的车卡片*/

.near {
  position: relative;
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 30rpx;
  margin: 20rpx 0 0 0;
}

.near text::before {
  position: absolute;
  z-index: 2;
  top: 25rpx;
  left: 160rpx;
  content: "";
  border-top: solid #999 1px;
  width: 18%;
}

.near text::after {
  position: absolute;
  z-index: 2;
  top: 25rpx;
  right: 160rpx;
  content: "";
  border-top: solid #999 1px;
  width: 18%;
}

.nearCard-fl {
  width: 40%;
  float: left;
}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%;
  margin-top: 15rpx;
  color: #999;
}

.nearCard-fr text {
  font-size: 22rpx;
}

.nearCard {
  height: 240rpx;
}

/* 按钮 */

button[type="primary"] {
  color: #fff;
  background-color: #20b3ad;
  font-size: 26rpx;
  margin-top: 10rpx;
}

#invoiceBtn {
  display: inline-block;
  height: 45rpx;
  line-height: 45rpx;
  width: 40%;
  float: right;
  margin: 0 10rpx 0 0;
}
