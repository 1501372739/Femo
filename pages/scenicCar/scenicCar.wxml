<!--pages/scenicCar/scenicCar.wxml-->
<view class='container'>
  <!-- 景点信息 -->
  <view class='card b-shadow'>
    <view class='card-content'>
      <image src='../../images/haibao.png'></image>
    </view>
    <view class='carDesc'>
      <text>舟山市是我国第一个以群岛建制的地级市，隶属于浙江省，地处中国东部黄金海岸线与长江黄金水道的交汇处，背靠长三角广阔经济腹地。</text>
    </view>
  </view>

  <!-- 景点车辆信息 -->
  <block wx:for-items="{{carInfoData}}">
    <view class='card nearCard b-shadow'>
      <view class='nearCard-fl'>
        <image src='{{item.imgurl}}'></image>
      </view>
      <view class='nearCard-fr'>
        <view>车牌：
          <text class='c-green'>{{item.cp}}</text>
        </view>
        <view>车型：
          <text class='c-green'>{{item.cx}}</text>
        </view>
        <view>价格：
          <text class='c-green'>{{item.price}}</text>
        </view>
        <view class='btnContent'>
          <button id="navBtn" class='bg-c' type="primary" hover-class="other-button-hover">导航到目的地</button>
          <button id="reserveBtn" bindtap="openReserve" class='bg-c' type="primary" hover-class="other-button-hover">预定</button>
        </view>
      </view>
    </view>
  </block>
</view>