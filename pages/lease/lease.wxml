<!--pages/lease.wxml-->
<view class="container">
 <!--轮播图-->
  <swiper class="home-swiper" indicator-dots="true" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for-items="{{lunboData}}">
      <swiper-item>
        <image src="{{item.imgurl}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
   <!-- 景点租车 -->
  <view class='near'>
    <text>景点租车</text>
  </view>
  <view class='card b-shadow'>
    <navigator url="../scenicCar/scenicCar" class='card-content'>
      <image src='../../images/haibao.png'></image>
    </navigator>
  </view>
   
   <!-- 长租 -->
  <view class='near'>
    <text>长租</text>
  </view>
  <block wx:for-items="{{carInfoData}}">
    <navigator class='card nearCard b-shadow' url='../carInfo/carInfo'>
      <view class='nearCard-fl'>
        <image src='{{item.imgurl}}'></image>
      </view>
      <view class='nearCard-fr'>
        <view>车辆价格：
          <text class='c-green'>{{item.price}}</text>
        </view>
        <view>续航里程：
          <text class='c-green'>{{item.lc}}</text>
        </view>
        <view>车身结构：
          <text class='c-green'>{{item.csjg}}</text>
        </view>
        <view>充电时长：
          <text class='c-green'>{{item.cdsc}}</text>
        </view>
      </view>
    </navigator>
  </block>

</view>
