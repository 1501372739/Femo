/**index.wxss**/

/*轮播控件*/

.home-swiper {
  width: 95%;
  height: 360rpx;
  margin: 0 auto;
}

.slide-image {
  width: 100%;
  height: 100%;
}

swiper-item {
  border-radius: 20rpx;
}

/* 头部 */

.header {
  height: 100rpx;
  width: 100%;
  overflow: hidden;
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
}

.h-content {
  width: 33.3%;
  display: inline-block;
}

.h-content text {
  font-size: 30rpx;
  line-height: 100rpx;
  margin: 0 15rpx;
  color: #999;
}

.h-middle, .h-middle text {
  line-height: 100rpx;
  font-size: 34rpx;
  text-align: center;
  color: #000;
}

.h-fl image {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin: 25rpx 0 0 15rpx;
}

.h-fr image {
  width: 55rpx;
  height: 55rpx;
  float: right;
  margin: 25rpx 15rpx 0 0;
}

.h-fr {
  text-align: right;
}

/* 附近的 */

.near text::before {
  position: absolute;
  z-index: 2;
  top: 30rpx;
  left: 30rpx;
  content: "";
  border-top: solid #c1c1c1 1px;
  width: 12%;
}

.near text::after {
  position: absolute;
  z-index: 2;
  top: 30rpx;
  right: 25rpx;
  content: "";
  border-top: solid #c1c1c1 1px;
  width: 57%;
}

.near text {
  color: #999;
  font-size: 30rpx;
  margin-right: 330rpx;
}

.nearCard-fl {
  width: 40%;
  float: left;
}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%;
  margin-top: 15rpx;
  color: #999;
}

.nearCard-fr text {
  font-size: 22rpx;
}

.nearCard {
  height: 240rpx;
}

/* 景区租车切换 */  

.journey-item navigator {
  color: #6ec8c5;
  margin: 10rpx 0 10rpx 15rpx;
  display: inline-block;
  font-size: 24rpx;
  border-radius: 20rpx;
  border: solid #e4e4e4 1px;
  padding: 5rpx 20rpx;
}
