/* pages/moreConfig/moreConfig.wxss */

.card {
  width: 90%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

.card-content image {
  width: 100%;
  height: 300rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.configDetail {
  padding: 10rpx 20rpx;
  margin-bottom:30rpx;
}

.table-title {
  font-size: 32rpx;
  line-height: 70rpx;
  text-align: center;
  font-weight: 800;
  border-bottom: solid #e4e4e4 1px;
  color: #999;
}

.table-w {
  width: 49%;
  display: inline-block;
}

.table-txt {
  font-size: 26rpx;
  display: block;
  text-align: center;
  line-height: 65rpx;
  border-bottom: solid #e4e4e4 1px;
  color: #999;
}

.table-txt:last-child {
  border-bottom: none;
}

.bor-r {
  border-right: solid #e4e4e4 1px;
}
#guanggao{
  width:95%;
}