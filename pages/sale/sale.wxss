/* pages/sale/sale.wxss */
/* 景区租车卡片 */
.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

.card-title {
  color: #6ec8c5;
  line-height: 65rpx;
  margin: 0 0 0 15rpx;
}

.card-content image {
  width: 100%;
  height: 300rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

/* 附近的车卡片*/
.nearCard-fl {
  width: 40%;
  float: left;
}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%; 
  margin-top:15rpx; 
  color: #999;
}
.nearCard-fr text{
  font-size:22rpx;
}

.nearCard{
  height: 240rpx;
}
