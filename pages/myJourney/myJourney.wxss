/* pages/myJourney/myJourney.wxss */

/* 卡片列表 */

.card {
  width: 95%;
  background-color: #fff;
  margin: 20rpx auto 0;
  border-radius: 20rpx;
}

.nearCard-fl {
  width: 40%;
  float: left;
}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%;
  margin-top: 40rpx;
  color: #999;
}

.nearCard-fr text {
  font-size: 22rpx;
}

.nearCard {
  height: 240rpx;
}

.leaseTime-b {
  color: #b03c5d;
}

/* 租赁时间 */

.leaseTime {
  margin: 30rpx 0 30rpx 20rpx;
  font-size: 30rpx;
}

.leaseTime-fr {
  width: 40%;
  float: right;
  margin: 20rpx 25rpx 0 0;
}

.leaseTime-fl {
  font-size: 27rpx;
  line-height: 60rpx;
  width: 55%;
  float: left;
  color: #999;
  text-align: center;
}

.leaseContent {
  overflow: hidden;
}

button[type="default"] {
  color: #fff;
  background-color: #20b3ad;
  font-size: 30rpx;
}

/* 当前位置 */

.currentPosition image {
  width: 50rpx;
  height: 50rpx;
  margin: 27rpx 10rpx 0 60rpx;
  float: left;
}

.currentPosition text {
  font-size: 32rpx;
  display: block;
  line-height: 100rpx;
  margin-left: 135rpx;
}

/* 故障上报 */

.footer-card {
  overflow: hidden;
  width: 95%;
  margin: 65rpx 0 0 0;
  color: #999;
}

.fault {
  background-color: #fff;
  width: 42%;
  height: 120rpx;
  border-radius: 20rpx;
}

.fault image {
  width: 45rpx;
  height: 45rpx;
  margin: 40rpx 35rpx;
  float: left;
}

.ml30 text {
  font-size: 30rpx;
  line-height: 120rpx;
}

.phone1 {
  font-size: 22rpx;
  line-height: 65rpx;
}

.phone2 {
  font-size: 24rpx;
}

/* 拨打电话浮窗 */

.phone-opaci {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
  height: 100%;
  width: 100%;
  background: black;
  opacity: 0.4;
  filter: alpha(opacity=40);
}

.phone-cont {
  position: fixed;
  top: 42%;
  left: 25%;
  z-index: 999;
  height: 90rpx;
  border-radius: 20rpx;
  padding: 5rpx 40rpx;
  background-color: #fff;
}

.phone-cont text {
  line-height: 90rpx;
  color: #000;
}

.phoneBtn {
  border: solid #dbdbdb 1px;
  border-radius: 20rpx;
  padding: 30rpx;
  display: inline-block;
  margin-left: 15rpx;
  line-height: 0 !important;
}
