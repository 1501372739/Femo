.depositSection{
    text-align: center;
    margin:20rpx 0;
}

.money text {
  font-size: 60rpx;
  line-height: 180rpx;
}

.depositDes {
  font-size: 26rpx;
  color: #999;
  margin: 20rpx auto;
}

.f-orange {
  color: orange !important;
}

.moneyImg {
  padding: 0 10rpx;
}

.moneyImg image {
  width: 100%;
  height: 600rpx;
}

.backMoneyDes, backMoneyDes text {
  text-align: left;
  margin: 20rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
}

.input-form{
  margin:10rpx 20rpx 0;
}

/* 按钮 */

button[type="primary"] {
  color: #fff;
  background-color: #f3ca1e;
  font-size: 26rpx;
  margin-top: 10rpx;
  border-top-left-radius: 0 !important;
  border-top-right-radius: 0 !important;
  height: 80rpx;
}
