/* component/cardList/cardList.wxss */

.card-title {
  color: #6ec8c5;
  line-height: 65rpx;
  margin: 0 0 0 15rpx;
}

.card-content image {
  width: 100%;
  height: 300rpx;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.near {
  position: relative;
  width: 100%;
  text-align: center;
  margin: 20rpx 0 0 0;
}

.near text {
  color: #999;
  font-size: 30rpx;
  margin-right: 330rpx;
}

.near text::before {
  position: absolute;
  z-index: 2;
  top: 30rpx;
  left: 30rpx;
  content: "";
  border-top: solid #c1c1c1 1px;
  width: 12%;
}

.near text::after {
  position: absolute;
  z-index: 2;
  top: 30rpx;
  right: 25rpx;
  content: "";
  border-top: solid #c1c1c1 1px;
  width: 57%;
}

.nearCard-fl {
  width: 40%;
  float: left;
}

.nearCard-fl image {
  width: 200rpx;
  height: 200rpx;
  padding: 8% 15%;
}

.nearCard-fr {
  font-size: 27rpx;
  line-height: 50rpx;
  width: 60%;
  margin-left: 40%;
  margin-top: 30rpx;
  color: #999;
  padding-top: 15rpx;
}

.nearCard-fr text {
  font-size: 22rpx;
}

.nearCard {
  height: 240rpx;
}

.c-green {
  color: #46bd86;
}

.b-shadow {
  box-shadow: 10rpx 10rpx 20rpx #999;
}

.card {
  width: 95%;
  background-color: white;
  border-radius: 20rpx;
  margin: 0 auto;
  position: relative;
}
